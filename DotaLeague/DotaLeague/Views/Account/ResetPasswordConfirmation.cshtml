@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="content">
    <div class="row">
        <div class="col-12">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <h2>@ViewData["Title"]</h2>
                <p>
                    Your password has been reset. Please <a asp-action="Login">click here to log in</a>.
                </p>
            </div>
        </div>
    </div>
</div>
