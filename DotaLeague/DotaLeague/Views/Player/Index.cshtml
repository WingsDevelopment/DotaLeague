@model DotaLeague.Models.PlayerViewModels.PlayerWithFiltersVM

@{
    ViewData["Title"] = "Player listing";
}

<div class="content">
    <div class="row">
        <div class="col-12">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-10">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                </div>
                <div class="card-body" style="margin-top: 10px">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    DisplayName
                                </th>
                                <th>
                                    VouchedLeague
                                </th>
                                <th>
                                    SteamID
                                </th>
                                <th>
                                    IsBanned
                                </th>
                                <th>
                                    Likes
                                </th>
                                <th>
                                    Dislikes
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Players)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DisplayName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VouchedLeague)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SteamID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsBanned)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Likes)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Dislikes)
                                    </td>
                                    <td>
                                        <a href="/Player/details?email=@item.Email" 
                                           class="btn btn-info">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>

                <div class="card-footer text-center">
                </div>
            </div>
        </div>
    </div>
</div>